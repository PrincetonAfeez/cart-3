{
  "name": "rogervila/cart",
  "description": "PHP Shopping cart using Fowler's Money pattern",
  "keywords": [
    "ecommerce",
    "shopping",
    "cart",
    "money"
  ],
  "authors": [
    {
      "name": "Roger Vil√†",
      "email": "rogervila@me.com"
    }
  ],
  "homepage": "https://github.com/rogervila/cart",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^5.6 || ^7.0",
    "moneyphp/money": "^3.0",
    "php-http/guzzle6-adapter": "^1.1",
    "florianv/swap": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.6"
  },
  "autoload": {
    "psr-4": {
      "Cart\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Cart\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": [
      "vendor/bin/phpunit"
    ]
  },
  "minimum-stability": "stable"
}
